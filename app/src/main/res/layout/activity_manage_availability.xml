<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageAvailabilityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Lịch rảnh"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm khung giờ rảnh mới"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chọn Ngày"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="?android:attr/textColorPrimary"/>

            <Button
                android:id="@+id/btnSelectStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Từ"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="?android:attr/textColorPrimary"/>

            <Button
                android:id="@+id/btnSelectEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đến"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="?android:attr/textColorPrimary"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSelectedDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa chọn ngày giờ"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnAddAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:layout_marginTop="8dp"
            android:enabled="false"/> </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch rảnh của bạn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAvailabilities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:listitem="@layout/list_item_availability"/>

</LinearLayout>