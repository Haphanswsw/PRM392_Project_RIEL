<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManageBookingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Yêu cầu Đặt lịch"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"/>

    <RadioGroup
        android:id="@+id/rgBookingFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <RadioButton
            android:id="@+id/rbPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đang chờ"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbCompleted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lịch sử (Hoàn thành)"/>
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/list_item_booking_request"/>

        <TextView
            android:id="@+id/tvNoBookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không có yêu cầu nào."
            android:textSize="16sp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>